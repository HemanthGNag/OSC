<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativerow"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector"
    android:padding="5dip" >
    <!-- Title, Desc, Date, Time, Location -->

    <TextView
        android:id="@+id/event_detailed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#040404"
        android:typeface="sans"
        android:textSize="16sp"
        android:textStyle="bold"/>
 
    <TextView
        android:id="@+id/event_detailed_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_detailed_title"
        android:textColor="#343434"
        android:textSize="12sp"
        android:textStyle="normal"
        android:layout_marginTop="1dip"
   />
    
    <TextView
        android:id="@+id/event_detailed_date_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_detailed_desc"
        android:textColor="#343434"
        android:textSize="13sp"
        android:textStyle="italic"
        android:layout_marginTop="1dip"
   />
    
 <!--   <TextView 
        android:id="@+id/event_detailed_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_detailed_date"
        android:textColor="#343434"
        android:textSize="13sp"
        android:textStyle="normal"
        /> -->
    <TextView 
        android:id="@+id/event_detailed_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_detailed_date_time"
        android:textColor="#343434"
        android:textSize="13sp"
        android:textStyle="normal"
        />
 
 
</RelativeLayout>